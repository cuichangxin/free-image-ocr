  margin-right: 10rpx;
}

.title {
  font-weight: bold;
  color: rgb(27, 18, 18);
  font-size: 30rpx;
}

.content {
  font-size: 26rpx;
  color: #524949;
  margin: 20rpx 0 20rpx 30rpx;
}

.button {
  width: 200rpx;
  height: 60rpx;
  position: relative;
  background: rgb(43, 199, 160);
  border: none;
  color: #fff;
  outline: none;
  text-align: center;
  line-height: 64rpx;
  box-shadow: -6px 6px 0 hsl(162, 100%, 30%);
  margin: 90rpx auto;
}

.button::before {
  content: "";
  display: block;
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  left: -6px;
  border: 6px solid transparent;
  border-right: 6px solid hsl(162, 100%, 30%);
  border-left-width: 0px;
}
.button::after{
  content: "";
  display: block;
  width: 0;
  height: 0;
  position: absolute;
  bottom: -6px;
  right: 0;
  border: 6px solid transparent;
  border-top: 6px solid hsl(162, 100%, 30%);
  border-bottom-width: 0px;
}
.button:active{
  background: hsl(162, 100%, 40%);
  top: 3px;
  left: -3px;
  box-shadow: -3px 3px 0 hsl(162, 100%, 30%);
}
.button:active::before{
  border: 3px solid transparent;
  border-right: 3px solid hsl(162, 100%, 30%);
  border-left-width: 0px;
  left: -3px;
}
.button:active::after{
  border: 3px solid transparent;
  border-top: 3px solid hsl(162, 100%, 30%);
  border-bottom-width: 0px;
  bottom: -3px;
}